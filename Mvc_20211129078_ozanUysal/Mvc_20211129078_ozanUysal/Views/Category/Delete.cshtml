@{
    Layout = "_LayoutAdmin";
}
@section CardHeader{
    <span>Kategori Sil</span>
}
@model CategoryModel

<h4>@Model.Name The category named will be deleted, Do you approve??</h4>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger btn-sm" />
    <a asp-action="Index" class="btn btn-primary btn-sm">Cancel</a>
</form>


